{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ],
  "rules": {
    "quotemark": [
      true,
      "single"
    ]
  }
}
