<?xml version="1.0" encoding="utf-8"?>
<widget id="jnj.reactjschedule.ReactJSchedule" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
        supportedPlatform="Web"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>React JSchedule</name>
    <description>React Drag and Drop scheduler widget</description>
    <icon>
        
    </icon>
    <properties>
        <propertyGroup caption="General">
            <property key="headerTitleAttibute" type="attribute" required="false">
                <caption>Title attribute</caption>
                <description>The attribute that contains the reactjschedule value</description>
                <attributeTypes>
                    <attributeType name="String"/>
                    <attributeType name="Enum"/>
                    <attributeType name="Integer"/>
                    <attributeType name="Decimal"/>
                    <attributeType name="Long"/>
                </attributeTypes>
            </property>
            <property key="headerTitleValue" type="string" required="false">
                <caption>Title value</caption>
                <description>The reactjschedule value shown when no value is provided via the attribute</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Data source">
                <property key="scheduleDataSource" type="datasource" isList="true" required="true">
                    <caption>Events</caption>
                    <description>Event items list from database</description>
                </property>
                <property key="scheduleRowsDataSource" type="datasource" isList="true" required="true">
                    <caption>Event rows</caption>
                    <description>List of rows loaded as Y</description>
                </property>
        </propertyGroup>

        <propertyGroup caption="Display">
             <property key="calendarDate" type="string" required="false">
                <caption>Calendar date:</caption>
                <description>Defined current date on calendar</description>
            </property>
            <property key="calendarView" type="enumeration" defaultValue="month">
                <caption>ReactJSchedule style</caption>
                <description>The appearance of the reactjschedule</description>
                <enumerationValues>
                    <enumerationValue key="day">Day</enumerationValue>
                    <enumerationValue key="week">Week</enumerationValue>
                    <enumerationValue key="month">Month</enumerationValue>
                    <enumerationValue key="quarter">Quarter</enumerationValue>
                    <enumerationValue key="year">Year</enumerationValue>
                    <enumerationValue key="custom">Custom</enumerationValue>
                </enumerationValues>
            </property>
            <property key="calendarDateFormat" type="string" required="false">
                <caption>Date format:</caption>
                <description>Defined format for display date</description>
            </property>

            <property key="constraintsRender" type="enumeration" required="true" defaultValue="badge">
                <caption>Type</caption>
                <description>Render it as either a badge or a color label</description>
                <enumerationValues>
                    <enumerationValue key="badge">Badge</enumerationValue>
                    <enumerationValue key="label">Label</enumerationValue>
                </enumerationValues>
            </property>
        </propertyGroup>
        <propertyGroup caption="Events">
            <property key="onClickAction" type="action" required="false">
                <caption>OnClickAction</caption>
                <description>Action to trigger when button / label is clicked</description>
            </property>
            <property key="onNewItemAction" type="action" required="false">
                <caption>NewItemHandler</caption>
                <description>Action to trigger when new item is created</description>
            </property>
        </propertyGroup>
    </properties>
</widget>
